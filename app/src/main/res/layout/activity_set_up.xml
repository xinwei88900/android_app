<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetUpActivity"
    android:background="@color/background_grey1">


    <LinearLayout
        android:id="@+id/setup_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp">

        <ImageView
            android:id="@+id/setup_iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cross"
            android:layout_margin="10dp"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/setup_tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="@string/Set_up" />
    </LinearLayout>

    <TextView
        android:id="@+id/setup_tv_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/setup_ll"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:text="Supprimer toutes les donnÃ©es "
        android:onClick="onClick"/>


    <TextView
        android:id="@+id/setup_tv_2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/setup_tv_1"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:text="Modifier le mot de passe "
        android:onClick="onClick"/>


</RelativeLayout>